<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>


<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.UIController">
	<StackPane>
		<Rectangle styleClass="rectangle-style"  height="50" width="200" fill ="#263238" />
		<Text styleClass="text-section" fx:id ="textSection"></Text>
	</StackPane>
	<HBox alignment="CENTER">
		<Button text="1" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="2" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="3" prefHeight="50" prefWidth="50" onAction="#getDigits" />
		<Button text="÷" prefHeight="50" prefWidth="50" onAction="#getOperator" styleClass="edge" />
	</HBox>
	<HBox alignment="CENTER">
		<Button text="4" prefHeight="50" prefWidth="50" onAction="#getDigits" />
		<Button text="5" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="6" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="×" prefHeight="50" prefWidth="50" onAction="#getOperator" styleClass="edge" />
	</HBox>
	<HBox alignment="CENTER">
		<Button text="7" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="8" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="9" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="–" prefHeight="50" prefWidth="50" onAction="#getOperator" styleClass="edge" />
	</HBox>
	<HBox alignment="CENTER">
		<Button text="c" prefHeight="50" prefWidth="50" onAction ="#clearOperator"/>
		<Button text="0" prefHeight="50" prefWidth="50" onAction="#getDigits"/>
		<Button text="=" prefHeight="50" prefWidth="50" onAction="#getOperator" />
		<Button text="+" prefHeight="50" prefWidth="50" onAction="#getOperator" styleClass="edge"/>
	</HBox>

</VBox>

